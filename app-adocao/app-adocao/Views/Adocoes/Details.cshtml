@model app_adocao.Models.Adocao

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Adocao</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Data)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Data)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Requerente)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Requerente.Login)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Pet)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Pet.ID)
        </dd>
    </dl>
</div>
<div>
    @{
        if (User.Identity.Name != Model.Requerente.Login)
        {
            <a asp-controller="Responsaveis" asp-action="Details" asp-route-id=@Model.Pet.Dono> Back to List | </a>
        }
        else
        {
            <a asp-controller="Requerentes" asp-action="Details" asp-route-id="@Model.Requerente.Login"> Back to List | </a>
        }

    }
    
    <a asp-action="Edit" asp-route-id="@Model?.AdocaoId">Edit</a>
</div>
