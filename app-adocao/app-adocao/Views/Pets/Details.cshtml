@model app_adocao.Models.Pet

@{
    ViewData["Title"] = "Details";
}

<div>
    <h2>@Model.Nome.ToUpper()</h2>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Responsavel)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Responsavel.Login)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataNascimento)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataNascimento)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Tipo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tipo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Historico)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Historico)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Sexo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Sexo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cor)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cor)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.ID">Edit</a> |
    <a asp-controller="Responsaveis" asp-action="Details" asp-route-id=@Model.Responsavel.Login>Back to List</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Data</th>
            <th scope="col">Requerente</th>
            <th scope="col">Pet</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Adocoes)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Data)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Adotante)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Pet.Nome)
                </td>
                <td>
                    <a asp-controller="Adocoes" asp-action="Edit" asp-route-id="@item.AdocaoId">Edit</a> |
                    <a asp-controller="Adocoes" asp-action="Details" asp-route-id="@item.AdocaoId">Details</a> |
                </td>
            </tr>
        }
    </tbody>
</table>
