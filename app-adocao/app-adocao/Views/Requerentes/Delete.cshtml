@model app_adocao.Models.Requerente

@{
    ViewData["Title"] = "Delete";
}

<h1 style="color: grey">Delete o requerente</h1>

<h3 style="border: solid 3px lightgrey;
    display: flex;
    justify-content: center;">
    Têm certeza que deseja deletar?
</h3>
<div style="display: flex;
    flex-direction: column;
    align-items: center;
    background: rgba(69, 69, 69, 0.56);
    border-radius: 20px;
}">
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Tipo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tipo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Raca)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Raca)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Senha)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Senha)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cidade)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cidade)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Estado)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Estado)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Login" />
        <input type="submit" value="Delete" class="btn btn-secondary" /> |
        <a asp-action="Index" style="color: #cb2e2e;">Voltar</a>
    </form>
</div>
