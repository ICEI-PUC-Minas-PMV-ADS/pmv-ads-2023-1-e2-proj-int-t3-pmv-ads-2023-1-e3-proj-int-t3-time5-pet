@model app_adocao.Models.Responsavel

@{
    ViewData["Title"] = "Details";
}

<h2>Perfil de Responsável por Pet(s)</h2>

<div>
    <h3>Perfil de @User.Identity.Name.ToUpper()</h3>
    <br />
    <a asp-action="Create" asp-controller="Pets" class="btn btn-outline-secondary">Inserir Pet</a>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Contato)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Contato)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cidade)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cidade)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Estado)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Estado)
        </dd>
    </dl>
</div>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Data</th>
            <th scope="col">Nome</th>
            <th scope="col">Status</th>
            <th scope="col">Tipo</th>
            <th scope="col">Histórico</th>
            <th scope="col">Sexo</th>
            <th scope="col">Cor</th>
            <th scope="col">Processos</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Pets)
        {
            int Cont = 0;
            @foreach(var i in item.Adocoes)
            {
                Cont = Cont + 1;
            }
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DataNascimento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tipo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Historico)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sexo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cor)
                </td>
                <td>
                    @Cont
                </td>
                <td>
                    <a asp-controller="Pets" asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-controller="Pets" asp-action="Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-controller="Pets" asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>